<%if users.exists? %>
  <% users.each do |user| %>
    <table class='table'>
      <thead>
        <tr>
          <th>image</th>
          <th>name</th>
          <th></th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <td><%= image_tag user.get_profile_image,size:'100x100' %></td>
        <td><%= user.name %></td>
        <td>フォロー数：<%= user.followings.count %></td>
        <td>フォロワー数：<%= user.followers.count %></td>
        <td><%= link_to "show", user_path(user.id) %></td>
      </tbody>
    </table>
  <%end%>
<%else%>
  <p>ユーザーはいません</p>
<%end%>